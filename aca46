խնդիր 46
#include <iostream>
#include <string>


class Engine {
private:
    std::string m_model;
    int m_hp;

public:
    Engine(std::string type = "BENZIN", int horsepower = 120)
        : m_model(type), m_hp(horsepower) {}

    void start() const {
        std::cout << "Engine started (" << m_model << ", " << m_hp << " HP)" << std::endl;
    }

    std::string getType() const { return m_model; }
    int getHorsepower() const { return m_hp; }
};



class Car {
private:
    std::string m_brand;
    Engine m_engine; 

public:
    Car(std::string brand, Engine engine)
        : m_brand(brand), m_engine(engine) {}

    void startCar() const {
        std::cout << m_brand << " is starting..." << std::endl;
        m_engine.start();
    }

    std::string getBrand() const { return m_brand; }
};



class Driver {
private:
    std::string m_name;
    int m_age;

public:
    Driver(std::string name, int age)
        : m_name(name), m_age(age) {}

    void driveCar(const Car& car) const { 
        std::cout << m_name << " (" << m_age << " y.o.) is driving a " 
                  << car.getBrand() << std::endl;
        car.startCar();
    }
};


int main() {
    Engine e1("BENZIN", 180);
    Car c1("MERCEDES", e1);        
    Driver d1("Ashot", 18);   

    d1.driveCar(c1);          

    return 0;
}
